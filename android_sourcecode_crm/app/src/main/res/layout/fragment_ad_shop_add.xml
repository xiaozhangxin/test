<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/top_back_title_bar" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:overScrollMode="never">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTextF8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/must_img_not"
                        android:gravity="center_vertical"
                        android:text="制单人"
                        android:textColor="@color/colorTextG6"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:gravity="end|center_vertical"
                        android:textColor="@color/colorTextG6"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTextF8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/must_img_not"
                        android:gravity="center_vertical"
                        android:text="制单日期"
                        android:textColor="@color/colorTextG6"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:gravity="end|center_vertical"
                        android:textColor="@color/colorTextG6"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTextF8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/must_img_not"
                        android:gravity="center_vertical"
                        android:text="部门"
                        android:textColor="@color/colorTextG6"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvDepartment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:gravity="end|center_vertical"
                        android:textColor="@color/colorTextG6"
                        android:textSize="13sp" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/colorTextF8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/must_img"
                        android:drawablePadding="1dp"
                        android:gravity="center_vertical"
                        android:text="部门"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tvOne"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="请输入部门"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTextF8" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/must_img"
                        android:drawablePadding="1dp"
                        android:gravity="center_vertical"
                        android:text="类型"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/right"
                        android:gravity="end|center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/must_img"
                        android:drawablePadding="1dp"
                        android:gravity="center_vertical"
                        android:text="老板姓名"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tvThree"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="请输入姓名"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTextF8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/must_img_not"
                        android:drawablePadding="1dp"
                        android:gravity="center_vertical"
                        android:text="投入方"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tvFive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="请输入投入方"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTextF8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/must_img_not"
                        android:drawablePadding="1dp"
                        android:gravity="center_vertical"
                        android:text="电话"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tvFour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="请输入电话"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />
                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTextF8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/must_img_not"
                        android:drawablePadding="1dp"
                        android:gravity="center_vertical"
                        android:text="地址"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tvSix"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="请输入地址"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTextF8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPee"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/must_img_not"
                        android:drawablePadding="1dp"
                        android:gravity="center_vertical"
                        android:text="制作费用"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tvSeven"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="请输入费用"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTextF8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/must_img_not"
                        android:drawablePadding="1dp"
                        android:gravity="center_vertical"
                        android:text="作用描述"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/tvEight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="请输入作用描述"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/colorTextF8" />

                <TextView
                    android:id="@+id/tvImgTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/must_img_not"
                    android:drawablePadding="5dp"
                    android:text="店招（户外）广告上传(最多30张)"
                    android:textColor="@color/colorTextG3"
                    android:textSize="14sp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/ok"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginEnd="81dp"
                    android:layout_marginLeft="81dp"
                    android:layout_marginRight="81dp"
                    android:layout_marginStart="81dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/setbar_colorprimary"
                    android:gravity="center"
                    android:text="确认申请"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
