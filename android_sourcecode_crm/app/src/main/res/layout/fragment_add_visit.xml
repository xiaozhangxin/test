                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/must_img"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="申请部门"
                    android:textColor="@color/colorTextG3"
                    android:textSize="13sp" />

