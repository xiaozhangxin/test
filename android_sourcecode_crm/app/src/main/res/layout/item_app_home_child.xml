<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackgroundBorderless"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:targetApi="lollipop">

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/menu_one"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextG3"
        android:textSize="13sp"
        android:text="签到"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/ivImg"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/ivImg"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivImg" />



    <TextView
        android:id="@+id/tvAudit"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintRight_toRightOf="@+id/ivImg"
        app:layout_constraintLeft_toLeftOf="@+id/ivImg"
        app:layout_constraintBottom_toBottomOf="@+id/ivImg"
        android:background="@drawable/setbar_tranlater_menu"
        android:text="审批"/>

</android.support.constraint.ConstraintLayout>