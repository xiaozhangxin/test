<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="时间区间"
                android:textColor="@color/colorTextG3"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_weight="5"
                    android:background="@drawable/setbar_filter_gray"
                    android:gravity="center"
                    android:hint="开始时间"
                    android:textColor="#333333"
                    android:textColorHint="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@color/colorTextGC" />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="5"
                    android:background="@drawable/setbar_filter_gray"
                    android:gravity="center"
                    android:hint="结束时间"
                    android:textColor="@color/colorTextG3"
                    android:textColorHint="@color/white"
                    android:textSize="13sp" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/colorActivityBackground" />

            <TextView
                android:id="@+id/tvChoosePartTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="部门选择"
                android:textColor="@color/colorTextG3"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tvChoosePart"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/setbar_filter_gray_two"
                android:drawableRight="@drawable/book_down"
                android:gravity="center_vertical"
                android:hint="请选择部门"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#333333"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tvTableTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="目录"
                android:textColor="@color/colorTextG3"
                android:textSize="14sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tvChooseTable"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/setbar_filter_gray_two"
                android:drawableRight="@drawable/book_down"
                android:gravity="center_vertical"
                android:hint="请选择目录"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#333333"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lableTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="标签选择"
                android:textColor="@color/colorTextG3"
                android:textSize="14sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/labelRecycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"/>

            <TextView
                android:id="@+id/postTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="职位选择"
                android:textColor="@color/colorTextG3"
                android:textSize="14sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/postRecycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                 />

            <View
                android:id="@+id/lineTwo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="gone" />

            <View
                android:id="@+id/lineOne"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="24dp"
                android:background="@color/colorActivityBackground" />

            <TextView
                android:id="@+id/tvStateTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="审核状态"
                android:textColor="@color/colorTextG3"
                android:textSize="14sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/statusRecycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:paddingBottom="60dp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorActivityBackground"
            android:text="重置"
            android:textColor="@color/colorTextG3"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>