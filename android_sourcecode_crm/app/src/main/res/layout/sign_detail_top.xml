<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/error_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorTextG6"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/ivAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorTextG6"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorTextG6"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvDepartment" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日签到"
        android:textColor="@color/colorTextG6"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSignNumRight"
        app:layout_constraintRight_toLeftOf="@+id/tvSignTimes"
        app:layout_constraintTop_toTopOf="@+id/tvSignNumRight" />

    <TextView
        android:id="@+id/tvSignTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/lable_three"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSignNumRight"
        app:layout_constraintRight_toLeftOf="@+id/tvSignNumRight"
        app:layout_constraintTop_toTopOf="@+id/tvSignNumRight" />

    <TextView
        android:id="@+id/tvSignNumRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:text="次"
        android:textColor="@color/colorTextG6"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivAvatar" />

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="04"
        android:textColor="@color/colorTextG3"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAvatar" />


    <TextView
        android:id="@+id/tvMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:text="1月"
        android:textColor="@color/colorTextG3"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvDay"
        app:layout_constraintLeft_toRightOf="@+id/tvDay" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorActivityBackground"
        app:layout_constraintBottom_toBottomOf="@+id/tvMonth"
        app:layout_constraintLeft_toRightOf="@+id/tvMonth"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMonth" />


</android.support.constraint.ConstraintLayout>
