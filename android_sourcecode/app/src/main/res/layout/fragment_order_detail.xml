<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground"
    android:orientation="vertical">


    <include layout="@layout/top_back_title_bar_new" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/setbar_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addressNameTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="收货人："
                    android:textColor="@color/colorTextG6"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/addressName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/addressNameTittle"
                    android:text="周石"
                    android:textColor="@color/colorTextG3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/addressPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/addressName"
                    android:text="1387348334"
                    android:textColor="@color/colorTextG6"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/addressLocalTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressName"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="收货地址："
                    android:textColor="@color/colorTextG6"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/addressLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressName"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/addressLocalTittle"
                    android:text="上海市普陀区斯奥术大师大奥术大师大阿打算大达啊啊"
                    android:textColor="@color/colorTextG3"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imgRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/right"
                    android:visibility="gone" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/setbar_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llGoods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/setbar_gray"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/goodsImg"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_goods" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/goodsName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/addressName"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"

                            android:text="上海市普陀区大四阿斯达啊啊"
                            android:textColor="@color/colorTextG3"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/goodsNorm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/addressName"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="3dp"
                            android:text="上海市普陀区曹杨五村430号290室啊实打实打算阿斯顿阿斯顿啊阿三大四大四大四阿斯达啊啊"
                            android:textColor="@color/colorTextG9"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/goodsPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addressName"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="5dp"
                                android:text="9999"
                                android:textColor="@color/mall_color"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="积分"
                                android:textColor="@color/mall_color"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/goodsNum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:layout_marginTop="5dp"
                                android:gravity="end"
                                android:text="x1"
                                android:textColor="@color/colorTextG9"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="服务"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:paddingRight="16dp"
                        android:text="此商品不支持7天退货"
                        android:textColor="@color/colorTextG9"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="配送方式"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:paddingRight="16dp"
                        android:text="快递免邮"
                        android:textColor="@color/colorTextG9"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="运费险"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:paddingRight="16dp"
                        android:text="卖家送，确认收货前退货可赔"
                        android:textColor="@color/colorTextG9"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llReamrk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="订单备注"
                        android:textColor="@color/colorTextG3"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvFive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:hint="选填，请和商家协商一致"
                        android:paddingRight="16dp"
                        android:textColor="@color/colorTextG6"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="24dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="共1件"
                        android:textColor="@color/colorTextG9"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="end"
                        android:text="小计："
                        android:textColor="@color/colorTextG3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/totalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9999"
                        android:textColor="@color/mall_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="16dp"
                        android:text="积分"
                        android:textColor="@color/mall_color"
                        android:textSize="11sp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/setbar_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOrderNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:text="订单编号：548449922916024320"
                    android:textColor="@color/colorTextG6"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvOrderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:text="订单创建时间：2019-02-22 10:24:11"
                    android:textColor="@color/colorTextG6"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvSendTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:text="发货时间：2019-02-22 10:24:11"
                    android:textColor="@color/colorTextG6"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llLogistics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物流单号："
                        android:textColor="@color/colorTextG6"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvLogisticsNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-02-22 10:24:11"
                        android:textColor="@color/colorPrimaryNew"
                        android:textSize="13sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvBottomOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/setbar_g_line15"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="联系客服"
                    android:textColor="@color/colorTextG6"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvBottomTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/setbar_cp_line15"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="确认收货"
                    android:textColor="@color/colorPrimaryNew"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvBottomThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/setbar_cp_line15"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="3dp"
                    android:text="兑换"
                    android:textColor="@color/colorTextG6"
                    android:textSize="13sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>